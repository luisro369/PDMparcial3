<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SignIn_Name">

    <RelativeLayout
        android:id="@+id/signIn_relativeLayout_mainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:padding="4dp">

        <ImageView
            android:id="@+id/signIn_imageView_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/text_logo"
            android:src="@drawable/logo" />


        <TextView
            android:id="@+id/signIn_textView_titulo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/signIn_imageView_logo"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Sign In"
            android:textColor="@color/Black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/signIn_editText_firstName"
            android:background="@drawable/shape_edit_text"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/signIn_textView_titulo"
            android:layout_marginBottom="25dp"
            android:hint="First Name" />

        <EditText
            android:id="@+id/signIn_editText_lastName"
            android:layout_width="match_parent"
            android:padding="8dp"
            android:background="@drawable/shape_edit_text"
            android:layout_height="wrap_content"
            android:layout_below="@id/signIn_editText_firstName"
            android:layout_marginBottom="25dp"
            android:hint="Last Name" />

        <EditText
            android:id="@+id/signIn_editText_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_edit_text"
            android:padding="8dp"
            android:layout_below="@id/signIn_editText_lastName"
            android:layout_marginBottom="25dp"
            android:hint="Email" />

        <EditText
            android:id="@+id/signIn_editText_phone"
            android:layout_width="match_parent"
            android:padding="8dp"
            android:background="@drawable/shape_edit_text"
            android:layout_below="@id/signIn_editText_email"
            android:layout_height="wrap_content"
            android:hint="Phone"
            />


        <Button
            android:id="@+id/signIn_button_next"
            android:layout_width="100dp"
            android:textStyle="bold"
            android:background="@drawable/borde_btn"
            android:layout_height="wrap_content"
            android:layout_below="@id/signIn_editText_phone"
            android:layout_centerInParent="true"
            android:layout_marginTop="25dp"
            android:text="Next" />


    </RelativeLayout>


</RelativeLayout>